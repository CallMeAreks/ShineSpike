@{
    ViewData["Title"] = "Panel";
}
@section Head
{
}

<main role="main" class="container">

    <div class="row">
        <div class="col-md-4">
            @{await Html.RenderPartialAsync("PanelSidebar.cshtml");}
        </div>
        <div class="col-md-8">
            <form method="post" asp-controller="Panel" asp-action="UploadBackup" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputFile">Upload a backup file</label>
                    <input type="file" name="backup" class="form-control-file">
                    <small id="fileHelp" class="form-text text-muted">Upload a backup file generated by another installation.</small>
                </div>

                <div class="row">
                    <div class="col-auto">
                        <button type="submit" disabled style="display: none" aria-hidden="true"></button>
                        <input type="submit" value="Upload" class="btn btn-sm btn-info" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</main><!-- /.container -->

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>


@{await Html.RenderPartialAsync("../Shared/Footer.cshtml");}
